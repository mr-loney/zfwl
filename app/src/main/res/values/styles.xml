<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppCompatTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="mCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_checkbox</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="ActivityFadeAnimation" parent="android:Animation">
    </style>
    <style name="AppNoTitleTheme" parent="android:Theme.Light.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/ActivityFadeAnimation</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:checkboxStyle">@style/mCheckBox</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="LightPopDialogAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/light_pop_dialog_appear</item>
        <item name="android:windowExitAnimation">@anim/light_pop_dialog_disappear</item>
    </style>
    <style name="LoadingDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="AppFullScreenTheme" parent="android:Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowAnimationStyle">@style/ActivityFadeAnimation</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <declare-styleable name="EditTextEx">
        <attr name="ex_title" format="string" />
        <!-- <attr name="leftText" format="string" /> -->
    </declare-styleable>
    <style name="mAutoCompleteStyle" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:popupBackground">@drawable/bg_rectangle_lightgray</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@color/lightblack</item>
    </style>

    <style name="edit_text_non_corner">
        <item name="android:layout_height">45dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="edit_text_white_corner">
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="button_Green_style" parent="button_normal_base_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">#54cd93</item>
        <item name="android:width">136dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_height">50dp</item>
    </style>
    <style name="button_normal_base_style">
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">@dimen/fontsize_button_normal</item>
    </style>
    <style name="button_notbg_style" parent="button_normal_base_style">
        <item name="android:textColor">@color/gray</item>
        <item name="android:background">@color/transparent</item>
    </style>
    <style name="button_titlebar_base_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/title_bar_text_color</item>
        <item name="android:textSize">@dimen/fontsize_title_button_middle</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="button_titlebar_left_style" parent="button_titlebar_base_style">
        <item name="android:drawableLeft">@drawable/back</item>
    </style>
    <style name="button_titlebar_default_style" parent="button_titlebar_base_style"></style>
    <!-- 字体风格 -->
    <style name="myTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="myTextAppearance.big">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="myTextAppearance.medium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="myTextAppearance.small">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="myTextAppearance.micro">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="myTextAppearance.hint">
        <item name="android:textColor">@color/hint</item>
    </style>

    <style name="myTextAppearance.hint.medium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="myTextAppearance.hint.small">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="myTextAppearance.hint.micro">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="GrayDivider">
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/divider</item>
    </style>
</resources>
