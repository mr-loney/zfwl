<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zfwl.activity.home.WLFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#0687F4">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="14dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/ic_wl_title"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="物流服务平台"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="3">
        <TextView
            android:id="@+id/tv_from"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="出发地"/>
        <TextView
            android:id="@+id/tv_to"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="目的地"/>
        <TextView
            android:id="@+id/tv_begin_time"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="发车时间"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tv_detail_area"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="目的地周边："/>

        <TextView
            android:id="@+id/tv_detail_area1"
            android:background="@drawable/bg_rect_blue_corner"
            android:layout_marginLeft="10dp"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="全部"/>
        <TextView
            android:id="@+id/tv_detail_area2"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="区县"/>
        <TextView
            android:id="@+id/tv_detail_area3"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="城市"/>
        <TextView
            android:id="@+id/tv_detail_area4"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="省份"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="134dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zfwl.controls.pulltorefresh.PullToRefreshListViewEx
            xmlns:ptr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/pull_refresh_listview_items"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@android:color/transparent"
            android:columnWidth="140dp"
            android:listSelector="@android:color/transparent"
            android:numColumns="2"
            android:scrollbarStyle="outsideOverlay"
            android:scrollingCache="true"
            android:stretchMode="columnWidth" />

        <include
            android:id="@+id/view_empty"
            layout="@layout/layout_empty"
            android:visibility="gone"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/id_select_address"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <com.zfwl.controls.wheel.widget.WheelView
                android:id="@+id/id_province"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >
            </com.zfwl.controls.wheel.widget.WheelView>

            <com.zfwl.controls.wheel.widget.WheelView
                android:id="@+id/id_city"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >
            </com.zfwl.controls.wheel.widget.WheelView>

            <com.zfwl.controls.wheel.widget.WheelView
                android:id="@+id/id_district"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >
            </com.zfwl.controls.wheel.widget.WheelView>
        </LinearLayout>
        <RelativeLayout
            android:layout_marginBottom="200dp"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="40dp"
            android:background="@color/white">
            <TextView
                android:id="@+id/id_reset_wheelView"
                android:layout_width="40dp"
                android:gravity="center"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:text="重置"/>
            <TextView
                android:id="@+id/id_ok_wheelView"
                android:layout_width="40dp"
                android:gravity="center"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="完成"/>
        </RelativeLayout>
    </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
