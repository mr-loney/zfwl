<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zfwl.SignUpActivity"
    android:id="@+id/root_view"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:background="#fafafb" >

        <ImageView
            android:id="@+id/close_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:textSize="16sp"
            android:gravity="center_vertical|right"
            android:layout_marginLeft="10dp"
            android:src="@drawable/x"/>

        <TextView
            android:id="@+id/close_btn1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="以后再说"
            android:textSize="16sp"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/gray"/>
    </RelativeLayout>

    <include
        android:id="@+id/layout_step1"
        layout="@layout/layout_signup_step1"
        android:visibility="gone"
        />
    <include
        android:id="@+id/layout_step2"
        layout="@layout/layout_signup_step2"
        android:visibility="gone"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</LinearLayout>
