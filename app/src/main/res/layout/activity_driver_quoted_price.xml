<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_background"
        android:orientation="vertical"
        tools:context="com.zfwl.activity.DriverQuotedPriceActivity">

        <cn.bingoogolapple.titlebar.BGATitleBar
            android:id="@+id/title_bar"
            style="@style/title_bar"
            android:background="@color/white"
            app:bgatitlebar_isTitleTextBold="false"
            app:bgatitlebar_titleText="司机报价"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@drawable/banner_driver_quoted_price_repeat"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="可提供车辆"
                android:textColor="#666666"
                android:textSize="14sp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/bg_quoted_price_corner"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/del"
                        android:layout_width="50dp"
                        android:padding="8dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/minus_disable"/>

                    <TextView
                        android:id="@+id/tv_car_num"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_quoted_price_rect"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="1"
                        android:textSize="16sp"/>

                    <ImageView
                        android:id="@+id/add"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/plus"
                        android:padding="8dp"
                        android:text="+"/>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <View
            style="@style/GrayDivider"
            android:layout_marginLeft="12dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="装载吨数"
                android:textColor="#666666"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/car_weight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:inputType="number"
                android:textColor="#333333"
                android:hint="输入吨数"
                android:textColorHint="#cccccc"
                tools:text=""/>
        </LinearLayout>

        <View
            style="@style/GrayDivider"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="12dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="报价方式"
                android:textColor="#666666"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_price_by_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:drawableLeft="@drawable/cb_check_1"
                    android:drawablePadding="4dp"
                    android:text="按吨报价"
                    android:textColor="#1379fa"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_price_by_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/cb_un_check_1"
                    android:drawablePadding="4dp"
                    android:text="按车辆报价"
                    android:textColor="#333333"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/GrayDivider"
            android:layout_marginLeft="12dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="单价(元)"
                android:textColor="#666666"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="输入单价"
                android:inputType="number"
                android:textColor="#333333"
                android:textColorHint="#cccccc"/>
        </LinearLayout>

        <View
            style="@style/GrayDivider"
            android:layout_marginLeft="12dp"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="#fafafa"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <View
            style="@style/GrayDivider"
            />

        <TextView
            android:id="@+id/tv_price_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="共计:1200元"
            android:textColor="#fa5547"
            android:textSize="17sp"/>

        <Button
            android:id="@+id/submit"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_confirm_price"
            android:gravity="center"
            android:text="确认报价"
            android:textColor="@color/white"
            android:textSize="17sp"/>
    </RelativeLayout>
</RelativeLayout>