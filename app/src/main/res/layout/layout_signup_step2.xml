<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="完善资料"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:padding="8dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="真实姓名会提升成单率"
        android:gravity="center_horizontal"
        android:padding="8dp" />


    <TextView
        android:drawableLeft="@drawable/sign_up_name_icon"
        android:layout_width="240dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:layout_gravity="center"
        android:textColor="@color/lightgray"
        android:text="输入您的真实姓名"
        android:gravity="left" />
        <EditText
            android:layout_gravity="center"
            android:id="@+id/et_name"
            style="@style/edit_text_non_corner"
            android:paddingLeft="0dp"
            android:layout_height="40dp"
            android:layout_width="200dp"
            android:gravity="left"
            android:textColorHint="@color/lightgray"
            android:maxLength="20"
            android:hint="输入" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="选择角色"
        android:gravity="center_horizontal"
        android:padding="8dp" />

    <LinearLayout
        android:layout_height="65dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:background="@drawable/signip_check_bg">
        <RelativeLayout
            android:layout_width="105dp"
            android:id="@+id/btn_im_sj"
            android:layout_height="match_parent"
            android:background="@drawable/signip_checked">
            <ImageView
                android:id="@+id/btn_im_sj_img"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/signip_check_sj1"/>

            <TextView
                android:id="@+id/btn_im_sj_txt"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:textColor="@color/white"
                android:text="司机"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="-20dp"
            android:layout_width="105dp"
            android:id="@+id/btn_im_cz"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/btn_im_cz_img"
                android:layout_width="35dp"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/signip_check_cz"/>

            <TextView
                android:id="@+id/btn_im_cz_txt"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:textColor="#77a1dd"
                android:text="车主"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_error"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        android:textColor="@color/red"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        style="@style/button_Gray_style"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:onClick="onClick"
        android:text="下一步" />
</LinearLayout>