<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical"
    tools:context="com.zfwl.activity.myorders.OrderCommentActivity">

    <cn.bingoogolapple.titlebar.BGATitleBar
        android:id="@+id/title_bar"
        style="@style/title_bar"
        android:background="@color/white"
        app:bgatitlebar_rightText="提交"
        app:bgatitlebar_titleText="评论"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="21dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="创建时间"
                android:textColor="#030303"
                android:textSize="14sp"/>

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/rb_create_time"
                style="@style/Widget.MaterialRatingBar.RatingBar"
                android:layout_width="136dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:stepSize="1"
                app:mrb_progressTint="#fa5547"
                app:mrb_secondaryProgressTint="#fa5547"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="出库时间"
                android:textColor="#030303"
                android:textSize="14sp"/>

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/rb_out_time"
                style="@style/Widget.MaterialRatingBar.RatingBar"
                android:layout_width="136dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:stepSize="1"
                app:mrb_progressTint="#fa5547"
                app:mrb_secondaryProgressTint="#fa5547"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="创库服务水平"
                android:textColor="#030303"
                android:textSize="14sp"/>

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/rb_service"
                style="@style/Widget.MaterialRatingBar.RatingBar"
                android:layout_width="136dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:stepSize="1"
                app:mrb_progressTint="#fa5547"
                app:mrb_secondaryProgressTint="#fa5547"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="服务人员服务太度"
                android:textColor="#030303"
                android:textSize="14sp"/>

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/rb_sales_attitude"
                style="@style/Widget.MaterialRatingBar.RatingBar"
                android:layout_width="136dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:stepSize="1"
                app:mrb_progressTint="#fa5547"
                app:mrb_secondaryProgressTint="#fa5547"/>

        </RelativeLayout>

    </LinearLayout>

    <View
        style="@style/GrayDivider"/>

    <View
        style="@style/GrayDivider"
        android:layout_marginTop="18dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="18dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp">

        <View
            android:layout_width="2dp"
            android:layout_height="17dp"
            android:layout_marginRight="7dp"
            android:background="#1373fa"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他意见"
            android:textColor="#030303"
            android:textSize="17sp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/et_remark"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:gravity="top"
        android:hint="您的建议是我们前进的方向"
        android:paddingLeft="12dp"
        android:paddingTop="10dp"
        android:textColorHint="#cccccc"
        android:textSize="14sp"/>
</LinearLayout>
