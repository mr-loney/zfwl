<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical">


    <EditText
        android:id="@+id/et_phone_num"
        style="@style/edit_text_white_corner"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:hint="请输入手机号"
        android:imeOptions="actionNext"
        android:layout_marginTop="5dp"
        android:inputType="phone" />
    <RelativeLayout android:layout_height="0.5dp"
        android:layout_width="fill_parent"
        android:background="@color/white">
        <View android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            android:background="@color/lightgray">
        </View>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/et_password"
            style="@style/edit_text_white_corner"
            android:layout_width="match_parent"
            android:hint="@string/login_edtPassword_hint"
            android:imeActionLabel="@string/login_btnLogin_text"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLength="12"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/btn_see_pwd"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:padding="5dp"
            android:paddingLeft="@dimen/activity_margin"
            android:paddingRight="@dimen/activity_margin"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/see_pwd" />

    </RelativeLayout>

    <RelativeLayout android:layout_height="0.5dp"
        android:layout_width="fill_parent"
        android:background="@color/white">
        <View android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            android:background="@color/lightgray">
        </View>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="@color/white"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_verifycode"
            style="@style/edit_text_white_corner"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="输入验证码"
            android:inputType="numberSigned"
            android:imeOptions="actionNext" />

        <Button
            android:id="@+id/et_get_verifycode"
            android:layout_width="116dp"
            android:layout_height="fill_parent"
            style="@style/button_Green_style"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="10dp"
            android:text="获取验证码"></Button>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_error1"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        android:textColor="@color/red"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_next"
        style="@style/button_Green_style"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:onClick="onClick"
        android:text="下一步" />

</LinearLayout>