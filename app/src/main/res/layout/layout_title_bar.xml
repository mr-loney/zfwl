<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/titlebar_height"
    android:background="#fafafb"
    android:orientation="vertical" >

    <Button
        android:id="@+id/titlebar_btnLeft"
        style="@style/button_titlebar_left_style"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:text=""
        android:visibility="gone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/titlebar_right_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/titlebar_icon_loading"
            android:layout_width="@dimen/titlebar_height"
            android:layout_height="54dp"
            android:padding="16dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/app_name"
            android:src="@drawable/me_manage"
            android:scaleType="centerInside"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/titlebar_icon_loading1"
            android:layout_width="@dimen/titlebar_height"
            android:layout_height="54dp"
            android:padding="4dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/app_name"
            android:src="@drawable/me_manage"
            android:scaleType="centerInside"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <Button
                android:id="@+id/titlebar_btnRight"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text=""
                android:textColor="@color/gray_92"
                android:visibility="gone"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tab_new"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="top|right"
                android:layout_marginTop="2dp"
                android:background="@drawable/red_circle"
                android:gravity="center"
                android:text="12"
                android:visibility="gone"
                android:padding="2dp"
                android:textColor="@android:color/black"
                android:textSize="9sp" />
            </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:lines="1"
        android:singleLine="true"
        android:text="标题"
        android:textColor="@android:color/black"
        android:textSize="@dimen/fontsize_button_Large" />

</RelativeLayout>